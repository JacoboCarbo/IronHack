<!-- app/views/projects/index/html.erb -->


<h2> All the contacts </h2>

<%= form_tag(contacts_search_path(:name), method: "get") do %>
  <%= label_tag(:contact, "Search for:") %>
  <%= search_field(:contact, :name) %>
  <%= submit_tag("Search") %>
<% end %>


<ul>
	<% @contacts.each do |contact| %>
		<li>
			<%= link_to contact.name, contact_path(contact.id)%>
		</li>
	<% end %>
</ul>