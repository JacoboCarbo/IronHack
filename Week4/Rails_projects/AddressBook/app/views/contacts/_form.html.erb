<%= form_for(contact) do |f| %>

	<%= render 'layouts/errors', model: contact %>

	<%= f.label :name %>
	<%=f.text_field :name %>

	<%= f.label :address %>
	<%= f.text_field :address %>

	<%= f.label :primary_phone %>
	<%= f.telephone_field :primary_phone %>

	<%= f.label :secondary_phone %>
	<%= f.telephone_field :secondary_phone %>

	<%= f.label :primary_email %>
	<%= f.email_field :primary_email %>

	<%= f.label :secondary_email %>
	<%= f.email_field :secondary_email %>

	<%= f.submit "Submit" %>
<% end %>